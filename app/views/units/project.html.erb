<%= render "units/project_side_bar" %>

<div class="info info_portfolio">
  <div class="title_info">
    ROVESE Group
  </div>
  <!--end title_info-->
  <a href="#" class="more">Подробнее</a>
</div><!--end info-->

<%= render "layouts/footer" %>

<div id="slider">
  <%= image_tag "1.jpg", :width => 1200, :height => 700 %>
</div>

<script type="text/javascript">
    $(function() {
        var IMG_TEXT;

        var firstImgText = $(".news_list img:first").parent().attr("title");
        $(".title_info").text(firstImgText);

        ChangeWidthHeight();

        $(window).resize(function () {
            ChangeWidthHeight();
        });

        $(".news_list a img").each(function() {
            var imgSrc = $(this).parent().attr("href");
            $("#imgStorage").append("<img src='"+imgSrc+"' alt='' />");
        });

        var IS_ANIMATING = false;

        $(".news_list a img").click(function(e) {
            e.preventDefault();
            var imgSrc = $(this).parent().attr("href");

            IMG_TEXT = $(this).parent().attr("title");

            if ($("#slider img:visible").attr("src") != imgSrc && !IS_ANIMATING) {
                IS_ANIMATING = true;
                $("#slider img:visible").fadeOut(1000);
                $("#slider img:hidden").attr("src", imgSrc).fadeIn(1000, function() {
                    IS_ANIMATING = false;
                });

                $(".info").fadeOut(500, function() {
                    $(".title_info").text(IMG_TEXT);
                    $(this).fadeIn(500);
                });
            }


        });

    });

    function ChangeWidthHeight() {
        if ($(window).height() > 626) {
            $('#container').css("height", $(window).height()+'px');
            $('#sidebar').css("height", $(window).height()+'px');
            $('#slider').css("width",  $(window).width()+'px');
            $('#slider').css("height", $(window).height()+'px');
            $('#slider img').css("height", $(window).height()+'px');
            $('#container').css("width",$(window).width()+'px');
            //$('#slider img').css("width",$(window).width()+'px');
            $('#slider img').attr("width",$(window).width()+'px');
            $('#slider img').attr("height",$(window).width()+'px');

        } else {
            $('#container').css("height", "626px");
            $('#sidebar').css("height",  "626px");
            $('#slider').css("width",  $(window).width()+'px');
            $('#slider').css("height",  "626px");
            $('#slider img').css("height",  "626px");
            $('#container').css("width",$(window).width()+'px');
            //$('#slider img').css("width",$(window).width()+'px');
            $('#slider img').attr("width",$(window).width()+'px');
            $('#slider img').attr("height",'626px');
        }
    }


</script>