<%= render "units/about_awards_side_bar" %>

<div id="awards">
  <% @unit.unit_images.each do |cover| %>
      <div class="award">
        <%= link_to image_tag(cover.image.url(:awards), :alt => cover.title), cover.image.url(), :class => "award-a" %>
      </div>
  <% end %>
  <div class="award">
    <% if can?(:edit, Unit) %>
        <%= render "units/admin_panel", :target => @unit %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
    $(document).ready(function () {

        awardsWidth = $(window).width();
        awardsHeight = $(window).height();

        $("#awards-big").css("width", awardsWidth);
        $("#awards-big").css("height", awardsHeight);

        $(window).resize(function () {
            awardsWidth = $(window).width();
            awardsHeight = $(window).height();

            $("#awards-big").css("width", awardsWidth);
            $("#awards-big").css("height", awardsHeight);
        });
    });
</script>