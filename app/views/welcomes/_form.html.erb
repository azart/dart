<%= form_for(@welcome) do |f| %>
    <% if @welcome.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@welcome.errors.count, "error") %> prohibited this welcome from being saved:</h2>

          <ul>
            <% @welcome.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :locale %>
      <br/>
      <%= f.collection_select(:locale, Language.collection, :cut, :name, {:prompt => false, :selected => I18n.locale}) %>
    </div>

    <div class="field">
      <%= f.label :title %>
      <br/>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :phone %>
      <br/>
      <%= f.text_field :phone %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <br/>
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :description %>
      <br/>
      <%= f.text_area :description %>
    </div>
    <div class="field">
      <%= f.label :seo_title %>
      <br/>
      <%= f.text_field :seo_title %>
    </div>
    <div class="field">
      <%= f.label :seo_keywords %>
      <br/>
      <%= f.text_field :seo_keywords %>
    </div>
    <div class="field">
      <%= f.label :seo_description %>
      <br/>
      <%= f.text_field :seo_description %>
    </div>
    <div class="field">
      <br/>
      <ul class="locations">
        <li>
          <%= link_to t("backend.actions.create_location"), new_location_path %>
        </li>
        <% @locations.each do |location| %>
            <li>
              <%= link_to 'Edit', edit_location_path(location) %>
              <%= link_to 'Destroy', location, confirm: 'Are you sure?', method: :delete %>
              <br/>
              <%= raw location.country %> / <%= raw location.city %> / <%= raw location.building %>
              / <%= raw location.more %>
            </li>
        <% end %>
      </ul>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<script language="javascript">
    $(document).ready(function () {
        $("#welcome_description").markItUp(mySettings);
    });
</script>